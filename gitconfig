[user]
  name = ymkz
  email = ymkzly@gmail.com
[core]
  editor = code
  precomposeunicode = true
  excludesfile = $HOME/.globalignore
  ignorecase = false
  quotepath = false
  pager = less -FRX
[push]
  default = current
[status]
  showUntrackedFiles = all
[diff]
  renames = true
  compactionHeuristic = true
[grep]
  lineNumber = true
[color]
  ui = true
  status = always
  branch = always
  grep = always
  diff = always
  diff-highlight = always
[pull]
  rebase = true
[alias]
  l = log --date=short --pretty=format:'%C(yellow)%h %Cgreen%cd %Cblue%cn %Creset%s'
  ll = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
  f = fetch
  b = branch
  ba = branch -a
  bl = branch -a -vv
  co = checkout
  new = checkout -b
  d = diff
  s = status --short --branch
  st = status
  a = add
  cm = commit -m
  amend = commit --amend -C HEAD
  recommit = commit --amend -m
  unstage = reset HEAD
  remotes = remote -v
  undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
[ghq]
  root = ~/workspace/ghq
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
