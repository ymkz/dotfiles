{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":timezone(Asia/Tokyo)",
    ":labels(dependencies, renovate)",
    ":enableVulnerabilityAlertsWithLabel(vulnerabilities)",
    "github>aquaproj/aqua-renovate-config#1.6.0"
  ],
  "platformAutomerge": true,
  "schedule": ["after 0am and before 3am every weekday"],
  "automerge": true,
  "automergeSchedule": ["after 3am and before 6am every weekday"],
  "packageRules": [{ "matchPackageNames": ["aquaproj/aqua-registry"] }]
}
